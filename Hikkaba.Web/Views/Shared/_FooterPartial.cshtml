@using Hikkaba.Application.Contracts
@using Hikkaba.Infrastructure.Models.Configuration
@using Humanizer
@using Microsoft.Extensions.Options
@inject IVersionInfoService VersionInfoService
@inject IOptions<HikkabaConfiguration> HikkabaConfiguration
<footer>
  <div class="container">
    <div class="row align-items-center">
      <div class="col text-center">
      </div>

      <div class="col-auto">
        <partial name="_LoginPartial" />
      </div>
    </div>

    <div class="row align-items-center">
      <div class="col text-center">
        <small class="text-body-secondary">@HikkabaConfiguration.Value.BoardName @VersionInfoService.ProductVersion</small>
      </div>
    </div>
    @if (ViewData["ExecutionTime"] is long executionTime)
    {
      <div class="row align-items-center">
        <div class="col text-center">
          <small class="text-body-secondary">Page generated in @(executionTime.Milliseconds().Humanize())</small>
        </div>
      </div>
    }
  </div>
</footer>
