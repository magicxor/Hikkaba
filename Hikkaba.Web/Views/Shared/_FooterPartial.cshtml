@using System.Globalization
@using Hikkaba.Application.Contracts
@using Hikkaba.Shared.Constants
@using Humanizer
@inject IVersionInfoService VersionInfoService
<footer>
  <div class="container">
    <div class="row align-items-center">
      <div class="col text-center">
      </div>

      <div class="col-auto">
        <partial name="_LoginPartial" />
      </div>
    </div>

    <div class="row align-items-center">
      <div class="col text-center">
        <small class="text-body-secondary">@Defaults.BoardName @VersionInfoService.ProductVersion</small>
      </div>
    </div>
    @if (ViewData["ExecutionTime"] is long executionTime)
    {
      <div class="row align-items-center">
        <div class="col text-center">
          <small class="text-body-secondary">Page generated in @(executionTime.Milliseconds().Humanize())</small>
        </div>
      </div>
    }
  </div>
</footer>
