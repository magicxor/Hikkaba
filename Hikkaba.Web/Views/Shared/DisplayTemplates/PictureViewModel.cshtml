@using Hikkaba.Infrastructure.Models.Configuration
@using Hikkaba.Web.Utils
@using Microsoft.Extensions.Options
@model Hikkaba.Web.ViewModels.PostsViewModels.Attachments.PictureViewModel
@inject IOptions<HikkabaConfiguration> Settings

@{
    var fileSizeString = FileSizeUtils.Humanize(Model.FileSize);
    var picturePropertiesString = Model is { Width: > 0, Height: > 0 } ? $"{Model.Width}x{Model.Height}" : "";
    var filePropertiesString = $".{Model.FileExtension}, {fileSizeString}, {picturePropertiesString}";
}

<li>
    <a href="@Url.Action("Get", "Attachments", new { containerName = Model.BlobContainerId.ToString(), blobName = Model.BlobId.ToString(), fileExtension = Model.FileExtension, getThumbnail = false })" target="_blank">
        <div>
            <p>@filePropertiesString</p>
            <img style="max-width: @(Settings.Value.ThumbnailsMaxWidth)px; max-height: @(Settings.Value.ThumbnailsMaxHeight)px"
                 src="@Url.Action("Get", "Attachments", new { containerName = Model.BlobContainerId.ToString(), blobName = Model.BlobId.ToString(), fileExtension = Model.FileExtension, getThumbnail = true })"
                 alt="Attached image (@filePropertiesString)" />
        </div>
    </a>
</li>
