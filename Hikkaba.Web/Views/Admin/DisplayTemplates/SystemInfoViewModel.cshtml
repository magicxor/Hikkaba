    <td class="text-center">@Html.DisplayNameFor(model => model.ProcessorCount)</td>
    <td class="text-center">@Html.DisplayFor(model => model.ProcessorCount)</td>
  </tr>
  <tr>
    <td class="text-center">@Html.DisplayNameFor(model => model.UserName)</td>
    <td class="text-center">@Html.DisplayFor(model => model.UserName)</td>
  </tr>
  </tbody>
</table>

